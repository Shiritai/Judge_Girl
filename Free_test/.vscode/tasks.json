{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "SDL2",
            "command": "C:\\Program Files\\mingw-w64\\x86_64-8.1.0-win32-seh-rt_v6-rev0\\mingw64\\bin\\gcc.exe",
            "args": [
                "-g",
                "src\\*.cpp",
                "-o",
                "build\\game.exe", // the name of our game and the folder where weâ€™re going to save it
                "-ID:/sdk/sdl2/mingw/x86_64/include", // where we save our SDL2 files
                "-LD:/sdk/sdl2/mingw/x86_64/lib", // the path to SDL2 libraries
                "-lmingw32", // an option to compile with the mingw libraries
                "-lSDL2main",
                "-lSDL2",
                "-mwindows"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}